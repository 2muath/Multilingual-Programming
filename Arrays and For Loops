EXAMPLE 1:

🔵 Python

arr = [1, 2, 3, 4, 5]

for num in arr:
    print(num)


🟣 PHP

<?php
$arr = array(1, 2, 3, 4, 5);

foreach ($arr as $num) {
    echo $num . "\n";
}
?>


🔴 MATLAB

arr = [1, 2, 3, 4, 5];

for i = 1:length(arr)
    disp(arr(i));
end


☕ Java

public class Main {
    public static void main(String[] args) {
        int[] arr = {1, 2, 3, 4, 5};

        for (int num : arr) {
            System.out.println(num);
        }
    }
}


⚫ C#

using System;

class Program {
    static void Main() {
        int[] arr = {1, 2, 3, 4, 5};

        foreach (int num in arr) {
            Console.WriteLine(num);
        }
    }
}


⚙️ C++

#include <iostream>
using namespace std;

int main() {
    int arr[] = {1, 2, 3, 4, 5};

    for (int i = 0; i < 5; i++) {
        cout << arr[i] << endl;
    }

    return 0;
}

_____________________________________________________________________________________________

EXAMPLE 2:

✅ 1. Python

# Array (list)
arr = [10, 20, 30, 40]

# For loop (index-based)
for i in range(len(arr)):
    print(arr[i])

# Foreach-style loop
for val in arr:
    print(val)


✅ 2. PHP

<?php
// Array
$arr = array(10, 20, 30, 40);

// For loop
for ($i = 0; $i < count($arr); $i++) {
    echo $arr[$i] . "\n";
}

// Foreach loop
foreach ($arr as $val) {
    echo $val . "\n";
}
?>


✅ 3. MATLAB

% Array
arr = [10, 20, 30, 40];

% For loop using index
for i = 1:length(arr)
    disp(arr(i));
end

% Direct iteration (less common)
for val = arr
    disp(val);
end


✅ 4. Java

public class Example {
    public static void main(String[] args) {
        int[] arr = {10, 20, 30, 40};

        // For loop
        for (int i = 0; i < arr.length; i++) {
            System.out.println(arr[i]);
        }

        // Enhanced for loop
        for (int val : arr) {
            System.out.println(val);
        }
    }
}


✅ 5. C#

using System;

class Program {
    static void Main() {
        int[] arr = {10, 20, 30, 40};

        // For loop
        for (int i = 0; i < arr.Length; i++) {
            Console.WriteLine(arr[i]);
        }

        // Foreach loop
        foreach (int val in arr) {
            Console.WriteLine(val);
        }
    }
}


✅ 6. C++

#include <iostream>
using namespace std;

int main() {
    int arr[] = {10, 20, 30, 40};
    int n = sizeof(arr) / sizeof(arr[0]);

    // For loop
    for (int i = 0; i < n; i++) {
        cout << arr[i] << endl;
    }

    // Range-based for loop (C++11+)
    for (int val : arr) {
        cout << val << endl;
    }

    return 0;
}
